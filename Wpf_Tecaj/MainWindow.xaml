<Window x:Class="Wpf_Tecaj.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Tecaj"
        mc:Ignorable="d"
        Title="Tecaj" Height="500" Width="525">
    <Grid>
        <Label Margin="70,8,0,0">HNB Tecaj</Label>
        <Label HorizontalAlignment="Right" Margin="0,8,70,0">PBZ Tecaj</Label>
        <DataGrid Name="HnbGrid"
                  HorizontalAlignment="Left" Margin="30,30,0,0"
                  AutoGenerateColumns="True"
                  VerticalAlignment="Top" Height="350" Width="140" SelectionChanged="HnbGrid_SelectionChanged">
        </DataGrid>

        <DataGrid Name="PbzGrid"
                  HorizontalAlignment="Right" Margin="0,30,30,0"
                  AutoGenerateColumns="True"
                  VerticalAlignment="Top" Height="350" Width="140">
        </DataGrid>
        
        
        <Button x:Name="btnRefresh" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="214,0,204.667,36.667" Click="btnRefresh_Click">REFRESH</Button>
    
        
        
    </Grid>
</Window>
